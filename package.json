{
	"private": true,
	"dependencies": {
		"lerna": "^2.4.0",
		"husky": "^0.13.4",
		"prettier": "^1.4.4",
		"lint-staged": "^3.6.1"
	},
	"scripts": {
		"clean": "lerna clean",
		"build": "lerna run build",
		"test": "CI=true lerna run test",
		"coverage": "lerna run coverage",
		"bootstrap": "lerna bootstrap --hoist",
		"release": "lerna publish"
	},
	"workspaces": [
		"packages/*"
	],
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"prettier --write --print-width 100 --tab-width 4 --no-semi",
			"git add"
		]
	}
}
